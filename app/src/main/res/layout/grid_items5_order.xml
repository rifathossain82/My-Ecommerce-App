<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_cardviewid5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <LinearLayout
            android:padding="10dp"
            android:background="@drawable/button_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
          <TextView
              android:id="@+id/name_order_id"
              android:padding="5dp"
              android:fontFamily="@font/rubik_bold_italic"
              android:layout_weight="1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Products Name: T-Shirt,Colorful Motorola Phone"
              android:textColor="#FFFFFF"
              />
            <TextView
                android:id="@+id/price_order_id"
                android:padding="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Price:  Tk. 550"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/status_order_id"
                android:padding="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status: Order"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/o_date_order_id"
                android:padding="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order Date: 26-01-2021"
                android:textColor="@color/startColor"
                />
            <TextView
                android:id="@+id/d_date_order_id"
                android:padding="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Possible Delivery Days: 3 To 5"
                android:textColor="@color/startColor"
                />
            <Button
                android:layout_marginTop="5dp"
                android:background="@drawable/button_000"
                android:id="@+id/cancel_order_id"
                android:padding="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel Order"
                android:textStyle="bold"
                android:textColor="@color/teal_700"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>