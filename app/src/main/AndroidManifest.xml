<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ecommerce.my_ecommerceapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.My_EcommerceApp">
        <activity android:name=".Details_ordered_product"></activity>
        <activity android:name=".Payment_confirm" />
        <activity android:name=".Show_Image" />
        <activity android:name=".UserAccount" />
        <activity android:name=".Add_to_cart" />
        <activity android:name=".Show_details_product" />
        <activity android:name=".Details_product" />
        <activity android:name=".Wish_list" />
        <activity android:name=".adminPanel.Modify_product" />
        <activity android:name=".adminPanel.AddProduct" />
        <activity android:name=".adminPanel.getproduct" />
        <activity android:name=".ForgetPassword" />
        <activity android:name=".SignupPage" />
        <activity android:name=".LoginPage" />
        <activity android:name=".Homepage" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>